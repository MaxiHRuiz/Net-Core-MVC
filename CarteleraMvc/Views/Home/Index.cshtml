@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn how to build ASP.NET apps that can run anywhere.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.svg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    There are powerful new features in Visual Studio for building modern web apps.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.svg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn how Microsoft's Azure cloud platform allows you to build, deploy, and scale web apps.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div style="text-align: center">
    <hr />
    @model IEnumerable<Movie>

    @{

        if (Model != null)
        {
            @foreach (var item in Model)
            {

                <div class="movie-card">
                    @if (item.Poster != "N/A")
                    {

                        <a href="@Url.Action("MovieInfo", "Home", new { imdbID = item.imdbID })">
                                <img class="round-pic2 thumbnail" src=@item.Poster title="CLICK TO VIEW DESCRIPTION" >
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("MovieInfo", "Home",  new { imdbID = item.imdbID })">
                            <img class="image-movie" src="~/images/default.jpg" title="CLICK TO VIEW DESCRIPTION">
                        </a>
                    }

                    <h5 class="card-title"><b>Title:</b> <span id="title">@item.Title</span></h5>
                    <p class="card-text"><b>Type:</b><span id="type"> @item.Type </span></p>
                    <p class="card-text"><small><b>Year:</b><span id="year">@item.Year</span></small></p>
                    <input href="#myModal" data-toggle="modal" id="query" class="btn btn-danger" type="button" value="See Trailer" onclick="keyWordsearch(this)" data-title="@item.Title" data-year="@item.Year" />

                    <div id="result">
                        <div id="myModal" class="modal fade">
                            <div class="modal-dialog">
                                <div class="modal-content" style="width: 600px; top: 20px; text-align: center; margin: auto; margin-top: 10px">
                                    <div class="modal-header" style="background-color: #222">
                                        <p style="display: inline-block;">Trailer from <span id="testTitle"></span></p>
                                        <button type="button" class="btn btn-danger" style=" float: right;" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <iframe id="ytplayer" type="text/html" width="560" height="315" src="" frameborder="0" allowfullscreen></iframe>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            }
        }

    }
</div>

